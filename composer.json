{
    "name": "setono/sylius-elasticsearch-plugin",
    "description": "Elasticsearch plugin for Sylius",
    "license": "MIT",
    "type": "sylius-plugin",
    "keywords": [
        "sylius",
        "elasticsearch",
        "search"
    ],
    "require": {
        "php": ">=7.4 || >= 8.0",
        "friendsofsymfony/elastica-bundle": "^6.1",
        "psr/event-dispatcher": "^1.0",
        "sylius/core-bundle": "^1.7",
        "symfony/config": "^4.4 || ^5.0",
        "symfony/dependency-injection": "^4.4 || ^5.0",
        "thecodingmachine/safe": "^1.3"
    },
    "require-dev": {
        "loevgaard/sylius-brand-plugin": "^2.1",
        "roave/security-advisories": "dev-master",
        "setono/code-quality-pack": "^1.5"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Setono\\SyliusElasticsearchPlugin\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "ergebnis/composer-normalize": true,
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "symfony/thanks": true,
            "composer/package-versions-deprecated": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "check-style": "ecs check src/",
        "fix-style": "ecs check src/ --fix"
    }
}
